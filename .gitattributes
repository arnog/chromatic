# Auto detect text files and perform LF normalization
* text=auto

# Enforce Unix newlines
*.css   text eol=lf
*.html  text eol=lf
*.mjs   text eol=lf
*.js    text eol=lf
*.ts    text eol=lf
*.json  text eol=lf
*.md    text eol=lf
*.mjs   text eol=lf
*.rb    text eol=lf
*.scss  text eol=lf
*.svg   text eol=lf
*.txt   text eol=lf
*.xml   text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf


# Don't diff or textually merge source maps
*.map   binary
