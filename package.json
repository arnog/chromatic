{
    "name": "chromatic",
    "version": "0.5.0",
    "description": "design tokens, design system, ui, theo, build system",
    "license": "MIT",
    "devDependencies": {
        "@cortex-js/prettier-config": "^1.0.0",
        "@typescript-eslint/eslint-plugin": "^2.9.0",
        "@typescript-eslint/parser": "^2.9.0",
        "cross-env": "^6.0.3",
        "eslint": "^6.7.1",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.1",
        "husky": "^3.1.0",
        "jest": "^24.9.0",
        "lint-staged": "^9.4.2",
        "prettier": "^1.19.1",
        "rollup": "^1.27.5",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-copy": "^3.1.0",
        "rollup-plugin-eslint": "^7.0.0",
        "rollup-plugin-node-builtins": "^2.1.2",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-terser": "^5.1.2",
        "rollup-plugin-typescript2": "^0.25",
        "typescript": "^3.7.2"
    },
    "dependencies": {
        "chalk": "^3.0.0",
        "chokidar": "^3.3.0",
        "ci-info": "^2.0.0",
        "color": "^3.1.2",
        "color-name": "^1.1.4",
        "cosmiconfig": "^6.0.0",
        "fs-extra": "^8.1.0",
        "glob": "^7.1.6",
        "handlebars": "^4.5.3",
        "highlight.js": "^9.16.2",
        "json5": "^2.1.1",
        "marked": "^0.7.0",
        "resolve-from": "^5.0.0",
        "string-similarity": "^3.0.0",
        "yaml": "^1.7.2",
        "yargs": "^15.0.2"
    },
    "engines": {
        "node": ">=10.9.0 <11.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/arnog/chromatic.git"
    },
    "bin": {
        "chromatic": "./bin/chromatic"
    },
    "scripts": {
        "build": "rollup --config ./config/rollup.config.js",
        "build:prod": "cross-env BUILD=production rollup --config ./config/rollup.config.js",
        "clean": "",
        "deploy": "",
        "lint": "prettier --config .config/prettierrc.yaml--ignore-path ./.prettierignore --write \"**/*.{ts,js,css,md,yml,json}\" \"!vendor/**\"",
        "stage": "bash scripts/stage.sh",
        "start": "bash scripts/server.sh",
        "test": "jest",
        "watch": "rollup --config ./config/rollup.config.js --watch"
    },
    "prettier": "@cortex-js/prettier-config",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.ts": [
            "eslint --fix",
            "git add"
        ],
        "*.{js,css,json,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "roots": [
            "<rootDir>/test",
            "<rootDir>/bin"
        ]
    }
}
